= render "gifts/header"
.main
  .mypage-main-content
    = render 'mypage/modules/mypage-sidebar'
    .card-contents
      .card-content
        .card-content-container
          %h2
            支払い方法
          .card-content-inner
            .card-list__title
              クレジットカード一覧
            .card-list__detail
              - if @cards.present?
                - @exp_mys.each_with_index do |my, i|
                  .card-company-logos
                    = link_to image_tag("//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?3296506464", width: '49', alt: "visa-logo") 
                    .cardlist__title__container  
                      .card-user-info-text
                        = "**** **** ****"+ "#{@exp_last4[i]}"
                        %br
                        = "#{my}"
                      .card-remove-btn
                        = form_with(url: delete_cards_path) do |f|
                          = f.hidden_field :card_id, value: "#{@cards[i].id}"
                          = f.submit "削除する"
                .add-card
                  .add-card__link
                    .add-card__container
                      = link_to new_card_path do
                        = fa_icon 'credit-card'
                        %span クレジットカードを登録する
              - else
                .add-card
                  .add-card__link
                    .add-card__container
                      = link_to new_card_path do
                        = fa_icon 'credit-card'
                        %span クレジットカードを登録する
        .settings-not-regist
          =link_to "支払い方法について ＞", "https://www.mercari.com/jp/help_center/category/6/"
= render "gifts/listing-button"
= render "gifts/footer"